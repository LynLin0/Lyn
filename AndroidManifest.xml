<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lyn.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <!-- 授予该程序录制声音的权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 授予该程序使用摄像头的权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 授予使用外部存储器的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="lyn.android.LynApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".StaggeredGridActivity" >
        </activity>
        <activity android:name=".fragment.ResultActivity" >
        </activity>
        <activity android:name=".PullToRefreshActivity" >
        </activity>
        <activity android:name=".StrictModeActivity" />
        <activity android:name=".LineEndActivity" />
        <activity android:name=".fragment.FragmentPracticeActivity" />
        <activity android:name="lyn.android.fragment.argument.FragmentArgumentActivity" />
        <activity
            android:name="lyn.android.fragment.dialog.FragmentDialogActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.fragment.viewpager.FragmentViewPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.fragment.result.FragmentForResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.fragment.result.FragmentSetResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.media.RecordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.media.TestPlayerPauseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.dialog.DialogActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.media.MediaPlayerTestActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.media.MediaPlayerViewTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.media.MediaCacheActivty"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.handler.HandlerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.activity.CleanTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.activity.CleanTopOneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="lyn.android.activity.CleanTopTwoActivity"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="lyn.android.keyboard.KeyboardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />
        <activity
            android:name="lyn.android.fragment.stack.FragmentStackActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity android:name=".HomeActivity" 
            android:theme="@style/haha"
            >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>