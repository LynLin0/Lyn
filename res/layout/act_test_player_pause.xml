    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextureView
        android:id="@+id/test_playder_pause_textrueview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="NewApi" />

    <Button
        android:id="@+id/test_player_pause_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play" />

    <Button
        android:id="@+id/test_player_pause_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause" />

</LinearLayout>